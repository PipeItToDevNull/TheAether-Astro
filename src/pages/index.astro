---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getEntry, render } from 'astro:content';

// Fetch and render the content of the "home" page
const homePage = await getEntry('home', 'home');
const { Content } = await render(homePage);
---

<StarlightPage frontmatter={{ title: 'Dev0 Docs', description: "A minor blog and documentation site designed to share lessons learned and snippets that I find useful.", tableOfContents: false  }}>
  <Content />
</StarlightPage>